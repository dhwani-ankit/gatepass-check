{
	"branches": ["main", "master"],
	"plugins": [
		[
			"@semantic-release/commit-analyzer",
			{
				"preset": "angular",
				"releaseRules": [
					{ "type": "feat", "release": "minor" },
					{ "type": "fix", "release": "patch" },
					{ "type": "perf", "release": "patch" },
					{ "type": "revert", "release": "patch" },
					{ "type": "docs", "release": false },
					{ "type": "style", "release": false },
					{ "type": "chore", "release": false },
					{ "type": "refactor", "release": false },
					{ "type": "test", "release": false },
					{ "type": "build", "release": false },
					{ "type": "ci", "release": false },
					{ "breaking": true, "release": "major" }
				],
				"parserOpts": {
					"noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES"]
				}
			}
		],
		[
			"@semantic-release/release-notes-generator",
			{
				"preset": "angular",
				"presetConfig": {
					"types": [
						{ "type": "feat", "section": "âœ¨ Features" },
						{ "type": "fix", "section": "ðŸ› Bug Fixes" },
						{ "type": "perf", "section": "âš¡ Performance Improvements" },
						{ "type": "revert", "section": "âª Reverts" },
						{ "type": "docs", "section": "ðŸ“ Documentation", "hidden": false },
						{ "type": "style", "section": "ðŸ’Ž Styles", "hidden": false },
						{ "type": "refactor", "section": "â™»ï¸ Code Refactoring", "hidden": false },
						{ "type": "test", "section": "âœ… Tests", "hidden": false },
						{ "type": "build", "section": "ðŸ—ï¸ Build System", "hidden": false },
						{ "type": "ci", "section": "ðŸ‘· Continuous Integration", "hidden": false },
						{ "type": "chore", "section": "ðŸ”§ Miscellaneous Chores", "hidden": false }
					]
				},
				"writerOpts": {
					"commitsSort": ["scope", "subject"],
					"mainTemplate": "{{> header}}\n\n{{> commits}}\n\n{{> footer}}",
					"footerPartial": "---\n\n### ðŸ‘¥ Authors\n\n{{#if contributors}}\n{{#each contributors}}\n* {{#if this.login}}@{{this.login}}{{else}}{{this.name}}{{/if}} ({{this.commits}} commit{{#unless (eq this.commits 1)}}s{{/unless}})\n{{/each}}\n{{else}}\nNo contributors for this release.\n{{/if}}"
				}
			}
		],
		[
			"@semantic-release/changelog",
			{
				"changelogFile": "CHANGELOG.md"
			}
		],
		[
			"@semantic-release/exec",
			{
				"prepareCmd": "python $GITHUB_WORKSPACE/.github/helper/update-version.py ${nextRelease.version}"
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": ["CHANGELOG.md", "*/__init__.py"],
				"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		],
		[
			"@semantic-release/github",
			{
				"successComment": false,
				"releasedLabels": false,
				"assets": []
			}
		]
	]
}